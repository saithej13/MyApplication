<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_bg_color"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llytitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size15"
                    android:layout_marginBottom="@dimen/size20"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/margin_15">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/Settings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size4"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="left|center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/size20"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Printer :-"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/text_size_small_12sp" />
                    <TextView
                        android:id="@+id/tvprinter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size10"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:padding="@dimen/size10"
                        android:hint="Select Printer"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="@dimen/size2"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_dark"
                        android:drawableRight="@drawable/arrow_down_new_1"
                        android:textColorHint="@color/text_color_dark"
                        android:textSize="@dimen/text_size_small_14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Printer Size:-"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/text_size_small_12sp" />
                    <TextView
                        android:id="@+id/tvprintersize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size10"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:padding="@dimen/size10"
                        android:layout_marginBottom="@dimen/size2"
                        android:hint="Select Printer Size"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color_dark"
                        android:drawableRight="@drawable/arrow_down_new_1"
                        android:textColorHint="@color/text_color_dark"
                        android:textSize="@dimen/text_size_small_14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Rate Collection Formate :-"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/text_size_small_12sp" />
                    <TextView
                        android:id="@+id/tvRCF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size10"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:padding="@dimen/size10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="@dimen/size2"
                        android:gravity="center_vertical"
                        android:hint="Select Rate Collection Formate"
                        android:textColor="@color/text_color_dark"
                        android:drawableRight="@drawable/arrow_down_new_1"
                        android:textColorHint="@color/text_color_dark"
                        android:textSize="@dimen/text_size_small_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Send SMS:-"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/text_size_small_12sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:layout_marginTop="@dimen/size5"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/size2"
                        android:paddingVertical="@dimen/size8"
                        android:paddingLeft="@dimen/size15"
                        android:visibility="visible">

                        <ToggleButton
                            android:id="@+id/tbAvailable"
                            android:layout_width="@dimen/margin_50"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/toggle_selector_yes_no"
                            android:checked="true"
                            android:textOff=""
                            android:textOn="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Whats App:-"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/text_size_small_12sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_marginBottom="@dimen/size2"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/size8"
                        android:paddingLeft="@dimen/size15"
                        android:visibility="visible">

                        <ToggleButton
                            android:layout_width="@dimen/margin_50"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/toggle_selector_yes_no"
                            android:checked="true"
                            android:textOff=""
                            android:textOn="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/size15"
                        android:singleLine="true"
                        android:text="Bill Period :-"
                        android:textColor="@color/text_color1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/text_size_small_12sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tvbillperiod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size10"
                        android:background="@drawable/corner_radius_5_and_border_ebebeb"
                        android:padding="@dimen/size10"
                        android:layout_marginBottom="@dimen/size2"
                        android:gravity="center_vertical"
                        android:hint="15"
                        android:textColor="@color/text_color_dark"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColorHint="@color/text_color_dark"
                        android:textSize="@dimen/text_size_small_14sp" />
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/size10"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/size10"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="@dimen/size16">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/size10"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size16" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:paddingVertical="@dimen/size10"
                android:layout_marginHorizontal="@dimen/size10"
                android:layout_marginBottom="@dimen/size10"
                android:background="@drawable/corner_radius_16"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />

        </RelativeLayout>
    </ScrollView>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtverifyotp"
                    android:text="@string/verifyotp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp30"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lledtotps"
                android:padding="@dimen/dp20"
                >
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/otp1card"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtotp1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_margin="@dimen/dp10"
                    android:maxLength="1"
                    android:textColor="@color/colourTextPrimary"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/otp2card"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtotp2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_margin="@dimen/dp10"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:textColor="@color/colourTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/otp3card"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtotp3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_margin="@dimen/dp10"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:textColor="@color/colourTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/otp4card"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtotp4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_margin="@dimen/dp10"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:textColor="@color/colourTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                   />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:id="@+id/btnVerifycard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_button"
                android:text="@string/verifyotp"
                android:textColor="@color/colourWhite"
                android:textSize="18sp"
                android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layouttop"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutdate"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/datepickericon"
                    android:layout_width="38dp"
                    android:layout_height="68dp"
                    android:src="@drawable/ic_date_range"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textdate"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/app_color"
                    android:gravity="left"
                    android:layout_toRightOf="@id/datepickericon"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text=""/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/txtdate"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="left"
                    android:visibility="gone"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="17/03/2021"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relshiftmtype"
                ><TextView
                android:id="@+id/usbDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="slno"
                android:visibility="invisible"
                android:gravity="center"
                android:textColor="@color/app_color"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/mno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="mno"
                    android:textColor="@color/app_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutshift"
                    android:layout_toLeftOf="@id/layoutmtype"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/shiftm"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_morning"
                        />
                    <TextView
                        android:id="@+id/textshiftm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:text="M"
                        android:textColor="@color/app_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutmtype"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/mtypec"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_cow"
                        />
                    <TextView
                        android:id="@+id/textmtypec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Cow"
                        android:layout_gravity="center"
                        android:textColor="@color/app_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layouttop"
            android:id="@+id/layoutdata"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/farmerid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/app_color"
                android:hint="ID"
                android:textColorHint="@color/app_color"
                android:inputType="number"
                android:maxLength="3"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp30"
                android:imeOptions="actionNext"
                android:background="@drawable/border"
                />

            <TextView
                android:id="@+id/fname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Farmer Name"
                android:layout_weight="1.6"
                android:textColorHint="@color/app_color"
                android:textColor="@color/app_color"
                android:textSize="@dimen/sp30"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layoutdata"
            android:id="@+id/layoutmdata"
            android:weightSum="5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mqty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Qty"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:maxLength="6"
                android:textColor="@color/app_color"
                android:textColorHint="@color/app_color"
                app:layout_constraintHorizontal_weight="0.8" />

            <EditText
                android:id="@+id/mfat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Fat"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:textColor="@color/app_color"
                android:textColorHint="@color/app_color"
                app:layout_constraintHorizontal_weight="0.2" />

            <EditText
                android:id="@+id/msnf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Snf"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:textColor="@color/app_color"
                android:textColorHint="@color/app_color" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/layoutrate"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:text="0.0"
                    />
                <TextView
                    android:id="@+id/textrate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rate"
                    android:textColor="@color/app_color"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/layoutamt"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="0.0"
                    android:textColor="@color/app_color"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/textamount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Amount"
                    android:textColor="@color/app_color"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutsubtotal"
            android:layout_below="@+id/layoutmdata">

            <!--                <com.baoyz.swipemenulistview.SwipeMenuListView-->
            <!--                    android:id="@+id/listview"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_gravity="start" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rcvmData"/>
        </LinearLayout>
        <!--<DatePicker android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Textvv"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_above="@+id/layoutsave"
            android:gravity="center"
            android:id="@+id/layoutsubtotal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:id="@+id/layoutqtysubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textsubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="Qty  :"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="0.0"
                    android:textColor="@color/app_color"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:id="@+id/layoutfatsubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textfat"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="6dp"
                    android:maxLength="30"
                    android:gravity="center"
                    android:text="FAT% :"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/avgfat"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="0.0"
                    android:textColor="@color/app_color"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:id="@+id/layoutsnfsubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textsnf"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:maxLength="7"
                    android:text="SNF% :"
                    android:textColor="@color/app_color"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/avgsnf"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="0.0"
                    android:textColor="@color/app_color"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutamtsubtotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/texttotalamt"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="Amt :"
                    android:textColor="@color/app_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/totalamt"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="0.0"
                    android:textColor="@color/app_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/layoutsave"
            android:orientation="horizontal">
            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/app_color"
                android:text="Save"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</layout>
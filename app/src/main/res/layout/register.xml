<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtRegister"
                android:text="@string/create_account"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp30"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtusername"
            android:text="@string/username"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp10"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            />
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:id="@+id/usernamecard"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtusername"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colourTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtpassword"
            android:text="@string/password"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp10"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            />
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:id="@+id/passwordcard"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colourTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtmobileno"
            android:text="@string/Mobile_No"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp10"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            />
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:id="@+id/mobilenocard"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMobileno"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colourTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
               />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtbranch_name"
            android:text="@string/branch_name"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp10"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            />
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:id="@+id/branchnamecard"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtbranchname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colourTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtaddress"
            android:text="@string/address"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp10"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            />
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:id="@+id/addresscard"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtaddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colourTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
               />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:id="@+id/btnNextcard"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/background_button"
            android:text="@string/Next"
            android:textColor="@color/colourWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
</layout>
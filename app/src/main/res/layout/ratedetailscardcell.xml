<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/navigate"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/llmain"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp20"
                    android:paddingTop="@dimen/dp20"
                    android:paddingBottom="@dimen/dp20"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/llmtype"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvmilktype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Milk_Type"
                        android:layout_marginEnd="@dimen/dp10"
                        android:textColor="@color/app_color"
                        app:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/sp16"/>
                    <ImageView
                        android:id="@+id/dropdownmilktype"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/arrow_d"
                        android:layout_weight="0.3"
                        />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp10"
                        android:src="@drawable/baseline_edit_24" />
                    <ImageView
                        android:id="@+id/ivdelete"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/ic_baseline_delete_24"
                        />
                    <ImageView
                        android:id="@+id/ivsave"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_add_circle_outline_24"
                        />


                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/llratetype"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp20"
                android:paddingEnd="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llratetype2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvratetype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Rate_Type"
                        android:layout_marginEnd="@dimen/dp10"
                        android:textColor="@color/app_color"
                        app:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/sp16"/>
                    <ImageView
                        android:id="@+id/dropdownratetype"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/arrow_d"
                        android:layout_weight="0.3"
                        />
                </LinearLayout>
            </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingStart ="@dimen/dp5"
                    android:paddingEnd ="@dimen/dp5"
                    android:paddingTop ="@dimen/dp10"
                    android:paddingBottom ="@dimen/dp10"
                    android:background="@color/bottom_color"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/llStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp5"
                            android:src="@drawable/formkit_date" />
                        <TextView
                            android:id="@+id/textStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/startdate"
                            app:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/dp10"
                            android:textSize="@dimen/sp12"/>
                        <TextView
                            android:id="@+id/tvstartdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/startdate"
                            app:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/sp12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp5"
                            android:src="@drawable/formkit_date" />

                        <TextView
                            android:id="@+id/textenddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enddate"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:layout_marginEnd="@dimen/dp10"
                            app:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvenddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enddate"
                            android:textColor="@color/app_color"
                            app:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/sp12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>